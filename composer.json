{
    "name": "rscmedia/icons",
    "description": "Helpful flag and other icons",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Rscmedia\\Icons\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Rob MacKay",
            "email": "robskiwarrior@gmail.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^2.34"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "post-install-cmd": [
            "php publish-assets.php"
        ],
        "post-update-cmd": [
            "php publish-assets.php"
        ]
    }
}
